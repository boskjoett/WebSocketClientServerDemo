<Window x:Class="WebSocketServer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WebSocketServer"
        mc:Ignorable="d"
        Title="Websocket Server" Height="316.714" Width="505.501">
    <Grid>
        <Label Content="Port:" HorizontalAlignment="Left" Margin="10,13,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="TextBoxPort" HorizontalAlignment="Left" Height="23" Margin="49,17,0,0" TextWrapping="Wrap" Text="8080" VerticalAlignment="Top" Width="55"/>
        <Button x:Name="ButtonStart" Content="Start Listening" Margin="0,14,119,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="98" Height="24" Click="ButtonStart_Click"/>
        <Button x:Name="ButtonStop" Content="Stop Listening" Margin="0,14,10,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="98" Height="24" Click="ButtonStop_Click"/>
        <ListBox x:Name="ListBoxLog" Margin="10,55,10,10"/>
    </Grid>
</Window>
